<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="MyTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <!--<style name="MyTheme.Base" parent="android:Theme.Material.NoActionBar.Fullscreen">-->
    <style name="MyTheme.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="colorPrimary">@color/colorText</item>
        <item name="colorPrimaryDark">@color/colorText</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:colorControlHighlight">@color/colorText</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/move</item>
        <item name="android:windowExitTransition">@android:transition/move</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
