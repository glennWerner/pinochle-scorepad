<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.glenn.pinochlescorepad.ScorePad"
    android:background="@drawable/greenfelt">

    <TextView
        android:id="@+id/scorePadHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scorePad"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scorePadHeader"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/team1"
                android:layout_column="0"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>

            <TextView
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/trump"
                android:id="@+id/textView5"
                android:layout_column="10"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>

            <TextView
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/team2"
                android:layout_column="29"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#C8E6C9"
            android:layout_marginBottom="5dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/score1"
                android:layout_column="0"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>

            <ImageView
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/trumpImage"
                android:layout_column="10"
                android:gravity="center"
                android:src="@drawable/heartnotification"/>

            <TextView
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/score2"
                android:layout_column="29"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterScore"
        android:id="@+id/enterScores"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearPoints"
        android:layout_below="@id/enterScores">
        <EditText
            android:id="@+id/roundPoints1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/pointsHint"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:gravity="center_horizontal"/>
        <EditText
            android:id="@+id/roundPoints2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/pointsHint"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <TextView
        android:id="@+id/lastTrick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearPoints"
        android:text="@string/lastTrick"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:paddingTop="10dp"/>
    <RadioGroup
        android:id="@+id/lastTrickRGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lastTrick">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"/>
        <RadioButton
            android:id="@+id/team1LastTrick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="lastTrickSelected"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/team2LastTrick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="lastTrickSelected"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingBottom="10dp">
        <Button
            android:id="@+id/scorePadButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:elevation="2dp"
            android:stateListAnimator="@anim/button_elevation"
            android:onClick="keyButton"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"/>
        <Button
            android:id="@+id/scorePadHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:elevation="2dp"
            android:stateListAnimator="@anim/button_elevation"
            android:onClick="goHomeScorePad"/>

    </LinearLayout>


</RelativeLayout>
