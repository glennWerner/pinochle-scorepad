<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/greenfelt"
    tools:context="com.example.glenn.pinochlescorepad.Victory">
    <TextView
        android:id="@+id/victoryH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Win!!"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:paddingBottom="30dp"/>
    <TextView
        android:id="@+id/victoryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations "
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_above="@id/victoryH"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:paddingBottom="30dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/heartnotification"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/spadenotification"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/clubnotification"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/diamondnotification"/>
</RelativeLayout>
