<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.glenn.pinochlescorepad">

    <supports-screens android:smallScreens="false"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="false"
        android:requiresSmallestWidthDp="360" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">


        <activity
            android:name=".MenuScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Bidding"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Rules"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ScorePad"
            android:screenOrientation="portrait" />
        <activity android:name=".shoot_moon"
            android:screenOrientation="portrait"/>
        <activity android:name=".Victory"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
